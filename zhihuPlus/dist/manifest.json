{
  "manifest_version": 2,
  "name": "Zhihu Plus",
  "version": "1.0.0",
  "description": "Zhihu Plus",
  "browser_action": {
    "default_icon": "./icons/64-zhihu.png",
    "default_title": "这是一个示例Chrome插件",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "./icons/16-zhihu.png",
    "64": "./icons/64-zhihu.png",
    "128": "./icons/128-zhihu.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.zhihu.com/*",
        "https://v.vzuu.com/video/*",
        "https://video.zhihu.com/video/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "homepage_url": "https://www.huanggaofang.com",
  "omnibox": {
    "keyword": "go"
  },
  "default_locale": "zh_CN"
}